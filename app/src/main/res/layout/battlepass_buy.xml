<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:background="@drawable/battlepass_buy_bg">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contentTopGl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата окончания: 1 июня 2024"
        android:textColor="@color/white"
        android:fontFamily="@font/din_pro_black"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/contentTopGl"
        app:layout_constraintEnd_toEndOf="@+id/buyType3"
        app:layout_constraintStart_toStartOf="@+id/buyType1" />
    <ImageView
        android:id="@+id/buyType1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/battlepass_buy_type_1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toStartOf="@+id/buyType2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contentTopGl"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/buyType2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/battlepass_buy_type_2"
        app:layout_constraintEnd_toStartOf="@+id/buyType3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buyType1"
        app:layout_constraintTop_toTopOf="@+id/contentTopGl"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/buyType3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="@dimen/_15sdp"
        android:src="@drawable/battlepass_buy_type_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buyType2"
        app:layout_constraintTop_toTopOf="@+id/contentTopGl"
        app:layout_constraintWidth_percent="0.2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/previewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Предосмотр пропуска"
        android:backgroundTint="@color/yellow"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buyType3"
        app:layout_constraintStart_toStartOf="@+id/buyType1"
        app:layout_constraintTop_toBottomOf="@+id/buyType2" />

    <ImageView
        android:id="@+id/exitButton"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintWidth_percent="0.05"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/cross_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>