<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:layout_width="@dimen/_260sdp"
    android:layout_height="@dimen/_50sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/achivments_item_bg">

    <TextView
        android:id="@+id/achivmentsItemCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/din_pro_bold"
        android:text="Старожил"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/achivmentsItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:includeFontPadding="false"
        android:text="Проведи в игре 10/100/1000 часов"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp"
        app:layout_constraintStart_toStartOf="@+id/achivmentsItemCaption"
        app:layout_constraintTop_toBottomOf="@+id/achivmentsItemCaption" />

    <com.skydoves.progressview.ProgressView
        android:id="@+id/achivmentsItemProgress"
        android:visibility="visible"
        android:layout_width="@dimen/_170sdp"
        android:layout_height="@dimen/_6sdp"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="@+id/achivmentsItemText"
        app:layout_constraintTop_toBottomOf="@+id/achivmentsItemText"
        app:progressView_autoAnimate="false"
        app:progressView_colorBackground="@color/black20"
        app:progressView_colorProgress="@color/yellow"
        app:progressView_max="100"
        app:progressView_padding="1dp"
        app:progressView_progress="50"
        app:progressView_progressFromPrevious="true"
        app:progressView_radius="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/achivmentsItemGiveButt"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_25sdp"
        android:backgroundTint="#66BB6A"
        android:text="Забрать"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="@dimen/_7sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/achivmentsItemRewardCaption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/achivmentsItemText" />

    <TextView
        android:visibility="visible"
        android:id="@+id/achivmentsItemProgressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/visby_round_cf_extra_bold"
        android:text="566/1000"
        android:textColor="@color/white"
        android:textSize="@dimen/_5sdp"
        android:shadowColor="@color/black"
        android:includeFontPadding="false"
        android:shadowRadius="2"
        app:layout_constraintBottom_toBottomOf="@+id/achivmentsItemProgress"
        app:layout_constraintEnd_toEndOf="@+id/achivmentsItemProgress"
        app:layout_constraintStart_toStartOf="@+id/achivmentsItemProgress"
        app:layout_constraintTop_toTopOf="@+id/achivmentsItemProgress" />

    <ImageView
        android:id="@+id/achivmentsItemStar1"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/achivments_item_star_active"
        app:layout_constraintEnd_toStartOf="@+id/achivmentsItemStar2"
        app:layout_constraintTop_toTopOf="@+id/achivmentsItemStar2" />

    <ImageView
        android:id="@+id/achivmentsItemStar2"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/achivments_item_star_active"
        app:layout_constraintBottom_toBottomOf="@+id/achivmentsItemStar1"
        app:layout_constraintEnd_toStartOf="@+id/achivmentsItemStar3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/achivmentsItemStar3"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/achivments_item_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/achivmentsItemStar2" />

    <TextView
        android:id="@+id/achivmentsItemRewardCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_2sdp"
        android:fontFamily="@font/visby_round_cf_extra_bold"
        android:includeFontPadding="false"
        android:text="Награда:"
        android:shadowColor="@color/black"
        android:shadowRadius="1"
        android:textColor="@color/white"
        android:textSize="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="@+id/achivmentsItemProgress"
        app:layout_constraintEnd_toStartOf="@+id/achivmentsItemReward"
        app:layout_constraintTop_toTopOf="@+id/achivmentsItemProgress" />

    <TextView
        android:id="@+id/achivmentsItemReward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@drawable/achivments_item_reward_bg"
        android:fontFamily="@font/visby_round_cf_extra_bold"
        android:paddingStart="@dimen/_3sdp"
        android:paddingEnd="@dimen/_3sdp"
        android:text="500 LC"
        android:textColor="@color/white"
        android:textSize="@dimen/_6sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/achivmentsItemRewardCaption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/achivmentsItemRewardCaption" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/achivmentsItemFullLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/achivments_item_bg_complete">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pricedownbl"
        android:text="выполнено"
        android:textAllCaps="true"
        android:textColor="#43A047"
        android:textSize="@dimen/_30sdp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>