<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_70sdp"
    android:layout_height="@dimen/_50sdp"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:layout_marginStart="@dimen/_7sdp"
    android:background="@drawable/spin_item_bg">

    <ImageView
        android:id="@+id/spinBoxItemImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginBottom="1dp"
        android:adjustViewBounds="true"
        android:src="@drawable/skin_test"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/spinBoxItemName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spinBoxItemName"
        android:layout_width="@dimen/_85sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_3sdp"
        android:fontFamily="@font/din_pro_medium"
        android:gravity="center"
        android:shadowColor="@color/white"
        android:shadowRadius="2"
        android:text="LADA МЕГА3000500 ХУРАКАН"
        android:textColor="@color/white"
        android:textSize="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/spinBoxItemImage"
        app:layout_constraintStart_toStartOf="@+id/spinBoxItemImage" />


</androidx.constraintlayout.widget.ConstraintLayout>