<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:orientation="vertical"

    android:paddingLeft="@dimen/_14sdp"
    android:paddingRight="@dimen/_14sdp"
    android:paddingTop="@dimen/_18sdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pt_root_ui_medium"
        android:text="Мониторинг"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:id="@+id/newsLL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_minus14sdp"
        android:layout_marginRight="@dimen/_minus14sdp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginRight="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:alpha="0.8"
            android:fontFamily="@font/pt_root_ui_bold"
            android:text="Истории"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/newsRV"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/_14sdp"
            android:paddingRight="@dimen/_4sdp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center_vertical"
        android:alpha="0.8"
        android:fontFamily="@font/pt_root_ui_bold"
        android:text="Наши сервера"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="@dimen/_7sdp"
        android:paddingVertical="@dimen/_3sdp">

        <ImageView
            android:id="@+id/ivDailyUsersIcon"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/userPer30Min"
            app:srcCompat="@drawable/people" />

        <TextView
            android:id="@+id/userPer30Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ttnorms_extrabold"
            android:text="513 игроков"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_7sdp"
            android:fontFamily="@font/visby_cf_bold"
            android:text="*за последние 30 минут"
            android:textColor="#919090"
            android:textSize="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivDailyUsersIcon"
            app:layout_constraintTop_toBottomOf="@id/userPer30Min" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <com.factor.bouncy.BouncyRecyclerView
        android:id="@+id/ourServersRV"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/_minus14sdp"
        android:layout_marginRight="@dimen/_minus14sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:clipToPadding="false"
        app:recyclerview_overscroll_animation_size="0.1"
        app:recyclerview_fling_animation_size="0.3"
        android:paddingBottom="@dimen/_40sdp"
        android:scrollbarThumbVertical="@drawable/scrollbar_rv"
        android:scrollbars="vertical" />

</LinearLayout>
