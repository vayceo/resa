<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_70sdp"
    android:layout_height="@dimen/_50sdp"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/spin_item_bg">

    <ImageView
        android:id="@+id/spinBoxItemImage"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/skin_test"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/spinBoxItemNameBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/spinBoxItemNameBg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_10sdp"
        android:background="@drawable/treasure_item_caption_top"
        android:backgroundTint="#9D3693"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/spinBoxItemName"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/din_pro_medium"
            android:gravity="center"
            android:shadowColor="@color/white"
            android:shadowRadius="2"
            android:includeFontPadding="false"
            android:text="LADA МЕГА3000500 ХУРАКАН"
            android:textColor="@color/white"
            android:textSize="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>