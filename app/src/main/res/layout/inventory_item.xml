<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:layout_width="@dimen/_45sdp"
    android:layout_height="@dimen/_45sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginEnd="@dimen/_3sdp"
    android:background="@drawable/inv_bg_shape"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/inv_p_top_bg" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:adjustViewBounds="true"
        android:background="@drawable/inv_item_bg_light"
        android:backgroundTint="#1E88E5"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/visby_round_cf_extra_bold"
        android:text="Скин сиджея"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        android:layout_marginBottom="@dimen/_1sdp"
        android:shadowRadius="1"
        android:shadowColor="@color/blue_"
        android:textSize="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/valueBg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_8sdp"
        android:layout_marginTop="5dp"
        android:background="@drawable/inv_bg_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/valueText"
            android:paddingRight="@dimen/_3sdp"
            android:paddingLeft="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprodisplaysemibold"
            android:includeFontPadding="false"
            android:text="3"
            android:textSize="@dimen/_5sdp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>