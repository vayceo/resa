<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/hud"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"

        android:id="@+id/duels_kills_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/duel_kills_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visby_chat"
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:textSize="@dimen/_9sdp"
            android:text="ОСТАЛОСЬ УБИЙСТВ:"
            android:textAllCaps="true"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            app:layout_constraintEnd_toEndOf="@+id/duel_kills_caption"
            app:layout_constraintStart_toStartOf="@+id/duel_kills_caption"
            app:layout_constraintTop_toBottomOf="@+id/duel_kills_caption">

            <ImageView
                android:id="@+id/duel_pistol_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/duel_pistol_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/duels_kills_left_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/visby_chat"
                android:includeFontPadding="false"
                android:shadowColor="@color/black"
                android:shadowRadius="1"
                android:text="5/30"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="@+id/duel_pistol_icon"
                app:layout_constraintStart_toEndOf="@+id/duel_pistol_icon"
                app:layout_constraintTop_toTopOf="@+id/duel_pistol_icon" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/all_state_panel"
        android:visibility="visible"
        android:background="@drawable/kill_statistic_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="4dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:reverseLayout="true"
        app:layout_constraintEnd_toEndOf="@+id/kill_list"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_panel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visby_chat"
            android:layout_marginEnd="3dp"
            android:shadowColor="@color/black"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:padding="4dp"
            app:layout_constraintEnd_toStartOf="@+id/barrier7"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/duels_top_icon"
                android:layout_width="9dp"
                android:layout_height="8dp"
                android:background="@drawable/duels_top_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="kubok" />

            <TextView
                android:id="@+id/top_panel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_chat"
                android:shadowColor="@color/black"
                android:text="ТОП - ИГРОКИ"
                android:textAllCaps="true"
                android:textSize="@dimen/_5sdp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toEndOf="@+id/duels_top_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/title_delimeter"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/duels_state_delimeter"
                app:layout_constraintTop_toBottomOf="@+id/top_panel_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/top_panel_title"
                android:contentDescription="kubok" />

            <TextView
                android:textSize="@dimen/_5sdp"
                android:id="@+id/top1_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_chat"
                android:shadowColor="@color/black"
                android:text="1. Leonid_Litvinenko"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_delimeter" />

            <TextView
                android:textSize="@dimen/_5sdp"
                android:id="@+id/top2_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_chat"
                android:shadowColor="@color/black"
                android:text="2. Leonid_Litvinenko"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top1_name_text" />

            <TextView
                android:textSize="@dimen/_5sdp"
                android:id="@+id/top3_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_chat"
                android:shadowColor="@color/black"
                android:text="3. Leonid_Litvinenko"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/top2_name_text" />



        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="top_panel,state_panel"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/state_panel"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/visby_chat"
            android:shadowColor="@color/black"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:padding="4dp"
            app:layout_constraintStart_toEndOf="@id/barrier7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/duels_state_icon"
                android:layout_width="9dp"
                android:layout_height="8dp"
                android:background="@drawable/duels_state_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="kubok" />

            <TextView
                android:id="@+id/state_panel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_chat"
                android:shadowColor="@color/black"
                android:text="МОЯ СТАТИСТИКА"
                android:layout_marginLeft="2dp"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_5sdp"
                app:layout_constraintStart_toEndOf="@+id/duels_state_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/state_title_delimeter"
                android:layout_marginTop="1dp"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="@drawable/duels_state_delimeter"
                app:layout_constraintTop_toBottomOf="@+id/state_panel_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/state_panel_title"
                android:contentDescription="kubok" />

            <TextView
                android:id="@+id/state_kills_count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_chat"
                android:shadowColor="@color/black"
                android:layout_marginTop="3dp"
                android:text="УБИЙСТВА: "
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/state_title_delimeter" />

            <TextView
                android:id="@+id/state_kills_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:textAlignment="center"
                android:fontFamily="@font/visby_chat"
                android:shadowColor="@color/black"
                android:background="@drawable/duels_kills_count_bg"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="7dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/_5sdp"
                app:layout_constraintStart_toEndOf="@+id/state_kills_count_title"
                app:layout_constraintTop_toBottomOf="@id/state_title_delimeter" />

            <TextView
                android:id="@+id/state_deaths_count_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/visby_chat"
                android:shadowColor="@color/black"
                android:layout_marginTop="4dp"
                android:text="СМЕРТЕЙ: "
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/state_kills_count_text" />

            <TextView
                android:id="@+id/state_deaths_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="1dp"
                android:fontFamily="@font/visby_chat"
                android:background="@drawable/duels_deaths_count_bg"
                android:layout_marginTop="3dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="@+id/state_kills_count_text"
                app:layout_constraintEnd_toEndOf="@+id/state_kills_count_text"
                app:layout_constraintTop_toBottomOf="@id/state_kills_count_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="100dp"
        android:id="@+id/kill_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:reverseLayout="true" />
</merge>