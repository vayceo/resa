<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
    android:id="@+id/giftNotifyMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/gift_notify_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/giftNotifyImg"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:adjustViewBounds="true"
            android:src="@drawable/gift_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/giftNotifyCaptionText"
            android:layout_width="wrap_content"
            android:fontFamily="@font/visby_round_cf_extra_bold"
            android:layout_height="wrap_content"
            android:shadowColor="#3EEAFF"
            android:shadowRadius="10"
            android:text="Вы получили подарок!"
            android:textColor="#3EEAFF"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/giftNotifyImg"
            app:layout_constraintTop_toTopOf="@+id/giftNotifyImg" />

        <TextView
            android:id="@+id/giftNotifyNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/visby_round_cf_extra_bold"
            android:text="Слот для семейного транспорта"
            android:shadowColor="@color/white"
            android:shadowRadius="10"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@+id/giftNotifyImg"
            app:layout_constraintTop_toBottomOf="@+id/giftNotifyCaptionText" />

        <TextView
            android:id="@+id/giftNotifyRareText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/visby_round_cf_extra_bold"
            android:text="Редкость: Rare"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="@+id/giftNotifyNameText"
            app:layout_constraintTop_toBottomOf="@+id/giftNotifyNameText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/giftNotifyButt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="Забрать"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/giftNotifyImg" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>